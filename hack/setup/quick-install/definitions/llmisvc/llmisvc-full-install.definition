DESCRIPTION: Install KServe LLM InferenceService and all related dependencies using helm.
METHOD: helm
RELEASE: true

TOOLS:
  - helm
  - yq

COMPONENTS:
  - name: external-lb
  - name: cert-manager
  - name: gateway-api-extension-crd
  - name: envoy-gateway
  - name: envoy-ai-gateway
  - name: gateway-api-gwclass
  - name: gateway-api-gw
  - name: lws-operator
  - name: kserve-helm
    env:
      LLMISVC: "true"

