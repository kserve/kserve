DESCRIPTION: Install KServe LLM InferenceService and all related dependencies using kustomize 
METHOD: helm

TOOLS:
  - helm
  - kustomize
  - yq

COMPONENTS:
  - name: external-lb
  - name: cert-manager
  - name: gateway-api-crd
  - name: envoy-gateway
  - name: envoy-ai-gateway
  - name: gateway-api-gwclass
  - name: gateway-api-gw
  - name: lws-operator
  - name: kserve-kustomize
    env:
      LLMISVC: "true"
